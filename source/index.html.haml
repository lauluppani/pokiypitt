        %strong Quinta de Anchorena
        %span Anchorena 477, San Isidro, Buenos Aires, Argentina
    %a{:href => "#map", :class=>"action-btn gray page-scroll"} Ver Mapa
    %a{:href => "#rsvp", :class=>"arrow-down page-scroll"}

%section#rsvp
  .wrapper
    .envelope
      %h1.section-heading R.S.V.P.
      %h2.section-subheading Vas a venir?
      %form{:action => "https://formspree.io/lauluppani@email.com", :method => "POST", :id=>"rsvp-form"}
        .row
          .col-md-6
            %input{:name => "subject", :type => "hidden", :value => "Poki & Pitt - RSVP"}
            %input{:name => "optradio", :required => "", :type => "radio", :value => "Cuenten conmigo!", :id=>"radio1"}
            %label{:for=>"radio1"} Cuenten conmigo!
          .col-md-6
            %input{:name => "optradio", :required => "", :type => "radio", :value => "No puedo ir", :id=>"radio2"}
            %label{:for=>"radio2"} No puedo ir
        .row
          .col-md-6
            %input{"data-validation-required-message" => "Por favor, ingresá tu nombre.", :name => "name", :required => "", :type => "text", :id=>"name"}
            %label{:for=>"name"} Nombre *
          .col-md-6
            %input{"data-validation-required-message" => "Por favor, ingresá tu nombre.", :name => "name", :required => "", :type => "text", :id=>"surname"}
            %label{:for=>"surname"} Apellido *
          .col-md-12
            %input{"data-validation-required-message" => "Por favor, ingresá tu email.", :name => "email", :required => "", :type => "email", :id=>"email"}
            %label{:for=>"email"} Email *
          .col-md-12
            %button{:type => "submit"} RSVP
            %p
              %small
                Por favor, confirmá para el
                %strong 18 de octubre.
      :javascript
        var contactform =  document.getElementById('rsvpForm');
        contactform.setAttribute('action', '//formspree.io/' + 'lauluppani' + '@' + 'gmail' + '.' + 'com');
